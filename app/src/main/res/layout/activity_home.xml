    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:layout_marginEnd="28dp"
        android:layout_marginBottom="168dp"
        android:text="Today's Recommendation"
        android:textColor="#FFEB3B"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/shapeableImageView"
        app:layout_constraintEnd_toEndOf="@+id/shapeableImageView"
        app:layout_constraintTop_toTopOf="@+id/shapeableImageView"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="189dp"
        android:layout_height="148dp"
        android:layout_marginTop="38dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="20dp"
        android:text="A man commits murder, wrestles with guilt, and seeks redemption through suffering and moral awakening. "
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/shapeableImageView"
        app:layout_constraintEnd_toEndOf="@+id/shapeableImageView"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/bookImage"
        app:layout_constraintTop_toTopOf="@+id/shapeableImageView"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Category"
        android:textColor="#FFFFFF"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/catBackgroud"
        app:layout_constraintEnd_toEndOf="@+id/catBackgroud"
        app:layout_constraintStart_toStartOf="@+id/catBackgroud"
        app:layout_constraintTop_toTopOf="@+id/catBackgroud" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reviews"
        android:textColor="#FFFFFF"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/revBackground"
        app:layout_constraintEnd_toEndOf="@+id/revBackground"
        app:layout_constraintStart_toStartOf="@+id/revBackground"
        app:layout_constraintTop_toTopOf="@+id/revBackground" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="What's New"
        android:textColor="#FFFFFF"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/whatsNew"
        app:layout_constraintEnd_toEndOf="@+id/whatsNew"
        app:layout_constraintStart_toStartOf="@+id/whatsNew"
        app:layout_constraintTop_toTopOf="@+id/whatsNew" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ratings"
        android:textColor="#FFFFFF"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/ratingsBackground"
        app:layout_constraintEnd_toEndOf="@+id/ratingsBackground"
        app:layout_constraintHorizontal_bias="0.437"
        app:layout_constraintStart_toStartOf="@+id/ratingsBackground"
        app:layout_constraintTop_toTopOf="@+id/ratingsBackground" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Top Books of The Week"
        android:textColor="#FFFFFF"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/topBooksBackground"
        app:layout_constraintEnd_toEndOf="@+id/topBooksBackground"
        app:layout_constraintStart_toStartOf="@+id/topBooksBackground"
        app:layout_constraintTop_toTopOf="@+id/topBooksBackground" />


