<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".home">


    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/catBackgroud"
        android:layout_width="185dp"
        android:layout_height="178dp"
        android:layout_margin="5dp"
        android:layout_marginTop="442dp"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        android:src="@drawable/cat"
        app:layout_constraintBottom_toTopOf="@id/whatsNew"
        app:layout_constraintEnd_toStartOf="@id/revBackground"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/shapeableImageView"
        app:shapeAppearanceOverlay="@style/roundimageview" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/revBackground"
        android:layout_width="185dp"
        android:layout_height="178dp"
        android:layout_margin="5dp"
        android:layout_marginTop="442dp"
        android:layout_marginBottom="21dp"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        android:src="@drawable/reviews"
        app:layout_constraintBottom_toTopOf="@+id/ratingsBackground"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/catBackgroud"
        app:layout_constraintTop_toBottomOf="@+id/shapeableImageView"
        app:shapeAppearanceOverlay="@style/roundimageview" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/whatsNew"
        android:layout_width="185dp"
        android:layout_height="178dp"
        android:layout_margin="5dp"
        android:layout_marginStart="172dp"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="218dp"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        android:src="@drawable/whatnew"
        app:layout_constraintBottom_toTopOf="@+id/topBooksBackground"
        app:layout_constraintEnd_toStartOf="@id/ratingsBackground"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/catBackgroud"
        app:shapeAppearanceOverlay="@style/roundimageview" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/ratingsBackground"
        android:layout_width="185dp"
        android:layout_height="178dp"
        android:layout_margin="5dp"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        android:src="@drawable/ratings"
        app:layout_constraintBottom_toTopOf="@id/topBooksBackground"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.36"
        app:layout_constraintStart_toEndOf="@+id/whatsNew"
        app:layout_constraintTop_toBottomOf="@id/revBackground"
        app:layout_constraintVertical_bias="0.661"
        app:shapeAppearanceOverlay="@style/roundimageview" />

    <!--  change id of these background images  -->


    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/topBooksBackground"
        android:layout_width="381dp"
        android:layout_height="178dp"
        android:layout_margin="5dp"
        android:layout_marginBottom="24dp"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        android:src="@drawable/topbooks"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.533"
        app:layout_constraintStart_toStartOf="parent"
        app:shapeAppearanceOverlay="@style/roundimageview" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/shapeableImageView"
        android:layout_width="381dp"
        android:layout_height="207dp"
        android:layout_margin="5dp"
        android:layout_marginTop="16dp"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        android:src="@drawable/forest"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.533"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:shapeAppearanceOverlay="@style/roundimageview" />

    <ImageView
        android:id="@+id/bookImage"
        android:layout_width="112dp"
        android:layout_height="165dp"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="21dp"
        app:layout_constraintBottom_toBottomOf="@+id/shapeableImageView"
        app:layout_constraintStart_toStartOf="@+id/shapeableImageView"
        app:layout_constraintTop_toTopOf="@+id/shapeableImageView"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@drawable/crimepunishment" />

